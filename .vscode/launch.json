{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'officer'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=officer",
                    "--package=officer"
                ],
                "filter": {
                    "name": "officer",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "HTTPS_PROXY": "localhost:8888"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'officer'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=officer",
                    "--package=officer"
                ],
                "filter": {
                    "name": "officer",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}